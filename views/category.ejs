<%- include elements/navbar.ejs %>


  <!-- Content wrapper -->
  <div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

      <div class="content-backdrop fade"></div>
      <!-- Content wrapper -->
      <div class="col-xs-6">
        <a href="<%=AdminUrl%>/admin/category%>"> 
          <button type="button" class="btn btn-primary buttonstyle">
            Add Category
          </button>
        </a>
        
      </div>
      <div class="col-md-12">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Lists / Category</span></h4>

        <!-- Basic Bootstrap Table -->
        <div class="box">
          <div class="table-responsive text-nowrap box-body">
            <table class="table table-hover data_table">
              <thead>
                <tr>
                  <th>S.No</th>
                  <th>Name</th>
                  <th>Images</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody class="table-border-bottom-0">
                <% if(data.length> 0){
                  var j=1;
                  for(var i = 0;i < data.length;i++) { %>
                    <tr>
                      <td>
                        <%=j %>
                      </td>
                      <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%=data[i].name %></strong></td>
                      <td>
                        <img src="<%=AdminUrl%>/<%=data[i].image_name %>" alt="Avatar" style="width:50px" />
                      </td>
                      
                      <td>
                        <a href="<%=AdminUrl%>/admin/update-category/%><%=data[i].id %>" class="btn btn-sm btn-warning">
                          <i class="bx bx-edit-alt me-1"></i>
                        </a>
                        <a href="<%=AdminUrl%>/admin/delete-category/%><%=data[i].id %>" class="btn btn-sm btn-danger">
                          <i class="bx bx-trash me-1"></i>
                        </a>                          
                      </td>
                    </tr>
                  <% j++ ; } %>
                <% } else{ %>
                  <tr>
                    <td colspan="5" class="text-center">No record found</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <!--/ Basic Bootstrap Table -->

      </div>
    </div>
    <!-- / Layout page -->

  </div>

  <%- include elements/footer.ejs %>